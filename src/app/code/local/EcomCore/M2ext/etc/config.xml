<config>
    <modules>
        <EcomCore_M2ext>
            <version>0.1.0</version>
        </EcomCore_M2ext>
    </modules>
    <global>
        <models>
            <eccm2ext>
                <class>EcomCore_M2ext_Model</class>
            </eccm2ext>
        </models>
        <helpers>
            <eccm2ext>
                <class>EcomCore_M2ext_Helper</class>
            </eccm2ext>
        </helpers>
    </global>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <ecomcore_m2ext>
                        <!-- Add column to catalog product grid -->
                        <type>singleton</type>
                        <class>eccm2ext/observer_adminhtml</class>
                        <method>onBlockHtmlBefore</method>
                    </ecomcore_m2ext>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <eav_collection_abstract_load_before>
                <observers>
                    <ecomcore_m2ext>
                        <!-- Add column to product list -->
                        <type>singleton</type>
                        <class>eccm2ext/observer_collection</class>
                        <method>onEavLoadBefore</method>
                    </ecomcore_m2ext>
                </observers>
            </eav_collection_abstract_load_before>
        </events>
    </adminhtml>
</config>